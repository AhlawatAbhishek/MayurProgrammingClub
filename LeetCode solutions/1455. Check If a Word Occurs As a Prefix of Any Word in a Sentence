------------------------------------------------------------------Java---------------------------------------------------------------------------------------------------------------
class Solution {
    public int isPrefixOfWord(String sentence, String searchWord) {
        String words[] = sentence.split(" ");
        int len = words.length;
        for(int indx = 0; indx < len; indx++){
            if(words[indx].indexOf(searchWord) == 0){
                return indx + 1;
            }
        }
        return -1;
    }
}
